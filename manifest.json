{
    "name": "Harbor Freight Coupons - HFQPDB",
    "short_name": "harbor freight coupon database extension",
    "version": "1.6.2",
    "manifest_version": 3,
    "description": "Automatically find and display harbor freight coupons on their website from hfqpdb.com",
    "icons": {
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Harbor Freight Coupons"
    },
    "permissions": [
    ],
    "host_permissions": [
        "https://www.hfqpdb.com/*",
        "https://www.harborfreight.com/*",
        "https://shop.harborfreight.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": [
            "https://www.harborfreight.com/*",
            "https://shop.harborfreight.com/*"
        ],
        "js": [
            "helper.js",
            "coupons.js"
        ],
        "run_at": "document_idle"
    }],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
